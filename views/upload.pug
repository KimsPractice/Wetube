extends layouts/main

block content
    .form-container
        .record-container#jsRecordContainer
            video#jsVideoPreview
            button#jsRecordBtn Start Recording
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="file") Video File
                input(type="file", name="videoFile" id="file" requried=true accept="video/*")
            input(type="text" placeholder="Title" name="title" requried=true)
            textarea(name="description", placeholder="desciption" requried=true)
            input(type="submit", value="Upload Video")