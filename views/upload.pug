extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="file") Video File
            input(type="file", name="file" id="file" requried=true)
            input(type="text" placeholder="Title" name="title" requried=true)
            textarea(name="description", placeholder="desciption" requried=true)
            input(type="submit", value="Upload Video")