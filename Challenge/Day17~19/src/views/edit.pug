extends template/layout

block content
  form(action=`/${movie.id}/edit`, method="post")
    input(type="text", name="title" placeholder="title" style="display:block" value=movie.title)
    div
      input(type="number", name="year" placeholder="year" min="0" max="9999" value=movie.year)
      input(type="number", name="rating" placeholder="rating" min="0" max="10" value=movie.rating)
    input(type="text", name="genre" placeholder="genre separate by ','" style="display:block" value=genres)
    textarea(name="snopsis", cols="30", rows="10" placeholder="snopsis" style="display:block")=movie.snopsis
    input(type="submit", value="Upload")  
    a(href=`/${movie.id}/delete`) Delete Video
  